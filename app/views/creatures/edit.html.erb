<div class="outer col-md-6 col-md-offset-3">
  <div class="col-md-12 text-center">
    <h1>Edit <%= @creature.name %></h1>
  </div>
  <div class="col-md-6 col-md-offset-3">

    <% if @creature.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@creature.errors.count, "error") %> prohibited
        this creature from being saved:
      </h4>
      <ul>
        <% @creature.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

      <%= bootstrap_form_for @creature do |f| %>
      <%= f.text_field :name, :placeholder => "Creature Name" %>
      <%= f.text_area :desc, :placeholder => "Description" %>

      <%= f.text_field :tag_ids, :value => @creature.tags.map{|t|t.name}.join(","), 'data-role'=>'tagsinput' %>
      <%= f.submit :class => "btn btn-default btn-new" %>
    <% end %>
  </div>
</div>