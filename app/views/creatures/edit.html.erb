<div class="outer col-md-6 col-md-offset-3">
  <div class="col-md-12 text-center">
    <h1>Edit <%= @creature.name %></h1>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @creature, url: creature_path, html: {class: "form"}, method: :patch do |f| %>
      <%= f.text_field :name, :placeholder => "Creature Name", :class => "form-control" %>
      <br>
      <%= f.text_area :desc, :placeholder => "Description", :class => "form-control" %>
      <br>
      <%= f.submit :class => "btn btn-default" %>
    <% end %>
  </div>
</div>