<div class="outer col-md-6 col-md-offset-3">
  <div class="col-md-12 text-center">
    <h1>Register A New Creature</h1>
  </div>
  <div class="col-md-6 col-md-offset-3">

    <% if @creature.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@creature.errors.count, "error") %> prohibited
        this creature from being saved:
      </h4>
      <ul>
        <% @creature.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_for @creature, url: creatures_path, html: {class: "form"} do |f| %>
      <%= f.text_field :name, :placeholder => "Creature Name", :class => "form-control" %>
      <br>
      <%= f.text_area :desc, :placeholder => "Description", :class => "form-control" %>
      <br>
      <%= f.submit :class => "btn btn-default btn-new" %>
    <% end %>
  </div>
</div>